<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstaLite.Views.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Appearance" FontAttributes="Bold" />
        <Grid ColumnDefinitions="Auto,*" Padding="0,8">
            <Label Grid.Column="0" Text="Dark Mode"/>
            <Switch Grid.Column="1" Toggled="Switch_Toggled" />
        </Grid>
        <Button Text="Sign Out" Clicked="SignOut_Clicked" />
    </VerticalStackLayout>
</ContentPage>
