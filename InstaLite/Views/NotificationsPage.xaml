<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:InstaLite.ViewModels"
             x:Class="InstaLite.Views.NotificationsPage"
             Title="Notifications">
    <ContentPage.BindingContext>
        <viewmodels:NotificationsViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.EmptyView>
                <Label Text="No notifications." HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="12,8">
                        <Image Grid.Column="0" Source="{Binding FromUser.AvatarUrl}" StyleClass="avatar" />
                        <Label Grid.Column="1" Text="{Binding Text}" />
                        <Label Grid.Column="2" Text="{Binding CreatedAt, StringFormat='{0:g}'}" StyleClass="subtitle"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
