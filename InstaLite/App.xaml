<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstaLite.App">
    <Application.Resources>
        <ResourceDictionary>
            <StyleSheet Source="Resources/Styles/styles.css" />
            <Color x:Key="Brand">#FF3161</Color>
            <Style TargetType="ActivityIndicator">
                <Setter Property="Color" Value="{StaticResource Brand}" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="16" />
            </Style>
            <Style TargetType="Label" x:Key="CaptionStyle">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#666, Dark=#AAA}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
